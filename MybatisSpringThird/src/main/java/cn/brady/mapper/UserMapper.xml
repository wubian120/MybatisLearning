    <select id="getAllUsers" resultMap="UserResultMap">
        SELECT * FROM user
    </select>

    <select id="getUserById" parameterType="Long" resultMap="UserResultMap">
        SELECT * FROM user WHERE uid = #{VALUE}
    </select>

    <select id="getOrdersByUserId" parameterType="long" resultType="cn.brady.pojo.Order">
        SELECT * FROM `order`  WHERE `order`.uid = #{VALUE}
    </select>

</mapper>