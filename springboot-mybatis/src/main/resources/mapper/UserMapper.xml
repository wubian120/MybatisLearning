<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.brady.dao.local.UserMapper">
    <resultMap id="UserResultMap" type="cn.brady.domain.User">
        <result column="uid"         property="uid" />
        <result column="name"        property="name" />
        <result column="create_time" property="createTime"/>
        <result column="password"    property="password" />
        <result column="updated_time" property="updatedTime"/>
        <result column="mobile" property="mobile"/>
    </resultMap>

    <parameterMap id="User" type="cn.brady.domain.User"/>

    <select id="getUserById" parameterType="java.lang.Long" resultMap="UserResultMap">
        SELECT * FROM `user` WHERE uid=#{uid}
    </select>


    <insert id="insertUser" parameterType="cn.brady.domain.User">
        INSERT INTO `user`(`uid`,`name`, `create_time`,`password`,`mobile`,`updated_time`)
        VALUES (#{uid},#{name},#{createTime},#{password},#{mobile},#{updatedTime} )
    </insert>



</mapper>
